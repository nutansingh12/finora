{
  "version": 2,
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" },
    { "src": "api/health.ts", "use": "@vercel/node" }
  ],
  "outputDirectory": "public",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30,
      "memory": 1024
    },
    "api/health.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 10,
      "memory": 256
    }
  },
  "routes": [
    { "src": "^/api/health$", "dest": "api/health.ts" },
    { "src": "^/api/(.*)$", "dest": "api/index.ts" },
    { "src": "^/(.*)$", "dest": "api/index.ts" }
  ]
}

